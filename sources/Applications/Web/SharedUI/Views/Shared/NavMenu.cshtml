@using TheSharpFactory.Apps.Web.SharedUI

@inject MvcApplicationModel appModel

@{
     ViewBag.CollapseNavMenu = true;
     ViewBag.NavMenuCssClass = (bool)ViewBag.CollapseNavMenu ? "collapse" : null;
     ViewBag.Brand = appModel.CommunicationWay == MvcCommunicationWay.ViaAPI
                  ? "API"
                  : "Direct";
}

<div class="top-row pl-4 navbar navbar-dark">
     <a class="navbar-brand" href="">MVC @ViewBag.Brand</a>
     <button class="navbar-toggler" onclick="ToggleNavMenu">
          <span class="navbar-toggler-icon"></span>
     </button>
</div>

<div class="@ViewBag.NavMenuCssClass" onclick="ToggleNavMenu">
     <ul class="nav flex-column">
          <li class="nav-item px-3">
               <a class="nav-link" asp-area="Landing" asp-controller="Home" asp-action="Index" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
               </a>
          </li>
          <li class="nav-item px-3">
               <a class="nav-link" asp-area="Landing" asp-controller="Home" asp-action="Counter">
                    <span class="oi oi-plus" aria-hidden="true"></span> Counter
               </a>
          </li>
          <li class="nav-item px-3">
               <a class="nav-link" asp-area="Landing" asp-controller="Home" asp-action="FetchData">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
               </a>
          </li>
          <li class="nav-item px-3">
               <a class="nav-link" asp-area="Sales" asp-controller="Customers" asp-action="Index">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Customers
               </a>
          </li>
     </ul>
</div>